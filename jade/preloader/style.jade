style.
    body {
        background: #333;
    }
    #preloader_wrapper {
        background: #333;
        width: 100%;
        height: 100%;
        z-index: 50;
        position: fixed;
    }
    @-moz-keyframes loading {
        0% {
            left: 0;
        }
        50% {
            left: 8.33333em;
        }
        100% {
            left: 0;
        }
    }
    @-webkit-keyframes loading {
        0% {
            left: 0;
        }
        50% {
            left: 8.33333em;
        }
        100% {
            left: 0;
        }
    }
    @keyframes loading {
        0% {
            left: 0;
        }
        50% {
            left: 8.33333em;
        }
        100% {
            left: 0;
        }
    }
    .preloader {
        width: 10em;
        height: 2.5em;
        position: fixed;
        top: 50%;
        left: 50%;
        margin: -1.25em 0 0 -5em;
        box-sizing: border-box;
        z-index: 51;
    }
    .preloader:before,
    .preloader:after {
        content: "";
        display: block;
        position: absolute;
        top: 0;
        bottom: 0;
        width: 1.25em;
        box-sizing: border-box;
        border: 0.25em solid #f80;
    }
    .preloader:before {
        left: -0.76923em;
        border-right: 0;
    }
    .preloader:after {
        right: -0.76923em;
        border-left: 0;
    }
    .preloader .equal {
        display: block;
        position: absolute;
        top: 50%;
        margin-top: -0.5em;
        left: 4.16667em;
        height: 1em;
        width: 1.66667em;
        border: 0.25em solid #f80;
        box-sizing: border-box;
        border-width: 0.25em 0;
        -moz-animation: loading 1.5s infinite ease-in-out;
        -webkit-animation: loading 1.5s infinite ease-in-out;
        animation: loading 1.5s infinite ease-in-out;
    }